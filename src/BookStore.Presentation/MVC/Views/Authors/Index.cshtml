@using BookStore.Domain.Entities
@model AuthorListViewModel
 
<a asp-controller="Authors" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        
        @for(int i = 0, rowNumber = Model.StartIndex + 1; i < Model.Authors.Count(); i++, rowNumber++)
        {
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model.Authors[i].Name</td>
                <td>@Model.Authors[i].Description</td>
                <td>
                    <a asp-controller="Authors" asp-action="DeleteAuthor" asp-route-id="@Model.Authors[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>

                    <a asp-controller="Authors" asp-action="Update" asp-route-id="@Model.Authors[i].Id" class="btn btn-secondary">
                        <i class='bx bxs-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination controls -->
@if (Model.TotalPages > 1)
{
    <div>
        @if (Model.CurrentPage > 1)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })"><i class='bx bx-chevron-left'></i> Previous</a>
        }

        @if (Model.CurrentPage != 1)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = 1 })">1</a>
        }

        @if (Model.CurrentPage > 2)
        {
            <span>...</span>
        }

        @for (int i = Model.CurrentPage - 1; i <= Model.CurrentPage + 1 && i <= Model.TotalPages; i++)
        {
            if (i > 1 && i < Model.TotalPages)
            {
                if (i == Model.CurrentPage)
                {
                    <div class="btn btn-primary">@i</div>
                }
                else
                {
                    <a class="btn btn-primary" href="@Url.Action("Index", new { page = i })">@i</a>
                }
            }
        }

        @if (Model.CurrentPage < Model.TotalPages - 1)
        {
            <span>...</span>
        }

        @if (Model.TotalPages != Model.CurrentPage && Model.TotalPages > 1)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = Model.TotalPages })">@Model.TotalPages</a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next <i class='bx bx-chevron-right'></i></a>
        }
    </div>
}
