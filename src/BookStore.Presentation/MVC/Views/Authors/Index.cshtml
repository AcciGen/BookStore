@using BookStore.Domain.Entities
@model List<Author>
 
<a asp-controller="Authors" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Full name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>
                    <a asp-controller="Authors" asp-action="DeleteAuthor" asp-route-id="@Model[i].Id" class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>

                    <a asp-controller="Authors" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-secondary">
                        <i class='bx bxs-edit-alt'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination controls -->
@if (ViewBag.TotalPages > 1)
{
    <div>
        @if (ViewBag.CurrentPage > 1)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })"><i class='bx bx-first-page'></i></a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <div class="btn btn-primary">@i</div>
            }
            else
            {
                <a class="btn btn-primary" href="@Url.Action("Index", new { page = i })" )>@i</a>
            }
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })"><i class='bx bx-last-page'></i></a>
        }
    </div>
}