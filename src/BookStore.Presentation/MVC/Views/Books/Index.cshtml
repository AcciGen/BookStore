@using BookStore.Domain.Entities
@model List<Book>

@{
    ViewData["Title"] = "Book";
}

<a asp-controller="Books" asp-action="Create" class="btn btn-primary">
    <i class='bx bx-plus'></i>
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">T/R</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @for (var i = 0; i < Model.Count; i++)
        {
            var rowNumber = i + 1;
            <tr>
                <th scope="row">@rowNumber</th>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author.Name</td>
                <td>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id=@Model[i].Id class="btn btn-danger">
                        <i class='bx bxs-trash'></i>
                    </a>
                    <a asp-controller="Books" asp-action="Update" asp-route-id="@Model[i].Id" class="btn btn-warning">
                        <i class='bx bxs-pencil'></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination controls -->
@if (ViewBag.TotalPages > 1)
{
    <div>
        @if (ViewBag.CurrentPage > 1)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })"><i class='bx bx-first-page'></i></a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <div class="btn btn-primary">@i</div>
            }
            else
            {
                <a class="btn btn-primary" href="@Url.Action("Index", new { page = i })" )>@i</a>
            }
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a class="btn btn-primary" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })"><i class='bx bx-last-page'></i></a>
        }
    </div>
}